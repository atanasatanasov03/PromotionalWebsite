<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RooftopRepairs</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RooftopRepairs.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/01a57c0a85.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="px-0">
    <header>
        <!--top bar-->
        <section class="top-bar">
            <div class="row text-light px-3" style="width:100%; height:100%; ">
                <div class="col-sm pl-5">
                    email@tesla-eood.bg
                </div><div class="col-md-6 text-center">
                    <!--brand-->
                    <a class="navbar-brand text-light" href="#">ТЕСЛА ЕООД</a>
                </div>
                <div class="col-sm pr-5 text-end">
                    +359 88 888 8888
                </div>
            </div>
        </section>
        <!-- navbar -->
        <nav class="navbar navbar-dark navbar-expand-lg fixed-top">
            <div class="container" style="width: 100%">
                <!-- toggler -->
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="sidebar offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title text-light" id="offcanvasNavbarLabel">Ремонт на покриви</h5>
                        <button type="button" class="btn-close btn-close-white border-0 shadow-none" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-around flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="AboutUs" asp-action="Index">За нас</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Services" asp-action="Index">Услуги</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Gallery" asp-action="Index">Галерия</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Contacts" asp-action="Index">Контакти</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex flex-row h-100 align-items-stretch">
        <div class="d-flex flex h-100 column text-center" style="flex: 1 1 0; flex-basis: 15%; width: 15%"></div>
        <div class="d-flex flex h-100 column text-center" style="flex-basis: 70%; height:100%; width:70%">
            <div class="container p-0">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
        <div class="d-flex flex h-100 column text-center" style="flex: 1 1 0; flex-basis: 15%; width:15%"></div>
    </div>
    
    
    <footer class="border-top footer text-white">
        <div class="container">
            &copy; 2023 - ТЕСЛА ЕООД - Website courtesy of atanas.p.atanasov.2003@gmail.com
        </div>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
