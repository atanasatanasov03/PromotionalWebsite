@model Dictionary<string, List<ServiceModel>>
@{
    ViewData["Title"] = "Услуги";
}

<style>
    body{
        overflow: hidden;
    }
</style>

<div class="capsule">
    <div class="d-flex services-container py-5 px-4 align-items-center justify-content-around">
        <div class="accordion-container li-blu w-100">
            <div class="accordion accordion-flush" style="max-height: 100%" id="ServicesAccordion">
                @foreach(string key in Model.Keys){
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading">
                            <button class="accordion-button collapsed" id="@key" type="button" data-bs-toggle="collapse" data-bs-target="#@Model[key][0].id" aria-expanded="false" aria-controls="@Model[key][0].id">
                                @key
                            </button>
                        </h2>
                        <div id="@Model[key][0].id" class="accordion-collapse collapse" aria-labelledby="heading" data-bs-parent="#ServicesAccordion">
                            @foreach(ServiceModel service in Model[key])
                            {
                                <div class="d-flex flex-row justify-content-between border-bottom px-4 py-3">
                                    <div class="d-flex flex-row align-items-center align-content-start px-4 w-50">
                                        @service.serviceName
                                    </div>
                                    <div class="d-flex flex-column align-items-center justify-content-between w-25 px-4" style="width: 65%">
                                        @if(service.serviceName == "Хидроизолация") {
                                            <div class="d-flex flex-row justify-content-start" style="min-width: 100%">
                                                <button type="button" class="btn btn-success" onclick="redirect('Waterproofing')">Отвори галерия</button>
                                            </div>
                                        } else if (key == "Беседки и навеси") {
                                            <div class="d-flex flex-row justify-content-start" style="min-width: 100%">
                                                <button type="button" class="btn btn-success" onclick="redirect('Building')">Отвори галерия</button>
                                            </div>
                                        } else {
                                            <div class="d-flex flex-row justify-content-start" style="min-width: 100%">
                                                <button type="button" class="btn btn-success" onclick="redirect('Roofs')">Отвори галерия</button>
                                            </div>
                                        }
                                    </div>
                                    <div class="d-flex flex-column align-items-center justify-content-between w-25 px-4" style="width: 65%">
                                        <div class="d-flex flex-row justify-content-end" style="min-width: 100%">
                                            <a type="button" class="btn btn-primary" asp-controller="Services" asp-action="Single" asp-route-id="@service.id" asp-route-key="@key">Прегледай детайли</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                     </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#roofBtn").click();
    });
    function redirect(target) {
        var url = '@Url.Action("__target__", "Gallery")';
        window.location.href = url.replace("__target__", target);
    }

</script>
