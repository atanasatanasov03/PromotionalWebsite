<script>
    window.onload = function () {
        document.getElementById('dropdownMenuButtonRoofs').innerHTML = "Вид ремонт";
    };

    $(document).ready(function () {
        $(".dropdown-menu li a").click(function () {
            val = $(this).parent().find('input').val();
            document.getElementById('dropdownMenuButtonRoofs').innerHTML = val;
            document.getElementById('serviceName').innerHTML = val;
            document.getElementById("roofModalBtn").classList.remove('disabled');
        });
    });
</script>